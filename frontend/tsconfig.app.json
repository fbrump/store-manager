{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // all paths defined here must match the configured path in `vite.config.ts`
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ],
      "@components/*": ["src/components/*"],
      "@views/*": ["src/views/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@stores/*": ["src/stores/*"]
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue"
  ]
}
